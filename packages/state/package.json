{
    "name": "@wasdadeel/state",
    "description": "Minimal external-state primitives with typed events",
    "keywords": [
        "typescript",
        "state",
        "state-management",
        "reactive",
        "events",
        "subscription",
        "external-state",
        "createState",
        "createBoolean",
        "createCounter",
        "typed-events",
        "zero-deps",
        "minimal"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bandrw/wasdadeel.git",
        "directory": "packages/state"
    },
    "author": "Andrei Balashov <bandrwx@gmail.com>",
    "version": "1.0.23",
    "type": "module",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/esm/index.d.ts",
            "import": "./dist/esm/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "sideEffects": false,
    "scripts": {
        "build:esm": "tsc -p tsconfig.json",
        "build": "rm -rf dist && yarn build:esm",
        "typecheck": "tsc --project ./tsconfig.json --noEmit --skipLibCheck",
        "lint:check": "exit 0",
        "lint:fix": "exit 1",
        "release": "yarn publish --new-version $(node -p \"require('./package.json').version\") --no-git-tag-version --no-commit-hooks",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@wasdadeel/emitter": "1.0.23"
    },
    "devDependencies": {
        "typescript": "^5"
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT"
}
