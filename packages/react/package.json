{
    "name": "@wasdadeel/react",
    "description": "React hooks and utilities for external state management",
    "keywords": [
        "react",
        "hooks",
        "state-management",
        "external-state",
        "useSyncExternalStore",
        "react-18",
        "react-19",
        "typescript",
        "state",
        "boolean",
        "counter",
        "context",
        "emitter",
        "teardown",
        "render",
        "key-listeners",
        "zero-deps"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bandrw/wasdadeel.git",
        "directory": "packages/react"
    },
    "author": "Andrei Balashov <bandrwx@gmail.com>",
    "version": "1.0.25",
    "type": "module",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/esm/index.d.ts",
            "import": "./dist/esm/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "sideEffects": false,
    "scripts": {
        "prebuild": "yarn workspace @wasdadeel/state build",
        "build:esm": "tsc -p tsconfig.json",
        "build": "rm -rf dist && yarn build:esm",
        "typecheck": "tsc --project ./tsconfig.json --noEmit --skipLibCheck",
        "lint:check": "exit 0",
        "lint:fix": "exit 1",
        "release": "yarn publish --new-version $(node -p \"require('./package.json').version\") --no-git-tag-version --no-commit-hooks",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": ">=18"
    },
    "dependencies": {
        "@wasdadeel/common": "1.0.25",
        "@wasdadeel/state": "1.0.25",
        "use-sync-external-store": "^1"
    },
    "devDependencies": {
        "@types/node": "^24",
        "@types/react": "^19",
        "@types/use-sync-external-store": "^1.5.0",
        "typescript": "^5"
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT"
}
