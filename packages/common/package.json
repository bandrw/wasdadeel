{
    "name": "@wasdadeel/common",
    "description": "Essential utilities for TypeScript projects",
    "keywords": [
        "typescript",
        "utilities",
        "common",
        "tools",
        "text",
        "html",
        "promise",
        "clipboard",
        "environment",
        "cookies",
        "jwt",
        "render",
        "tree",
        "validation",
        "timing",
        "browser",
        "node",
        "zero-deps"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bandrw/wasdadeel.git",
        "directory": "packages/common"
    },
    "author": "Andrei Balashov <bandrwx@gmail.com>",
    "version": "1.0.22",
    "type": "module",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/esm/index.d.ts",
            "import": "./dist/esm/index.js"
        },
        "./server": {
            "types": "./dist/esm/server.d.ts",
            "import": "./dist/esm/server.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "sideEffects": false,
    "scripts": {
        "build:esm": "tsc -p tsconfig.json",
        "build": "rm -rf dist && yarn build:esm",
        "typecheck": "tsc --project ./tsconfig.json --noEmit --skipLibCheck",
        "lint:check": "exit 0",
        "lint:fix": "exit 1",
        "release": "yarn publish --new-version $(node -p \"require('./package.json').version\") --no-git-tag-version --no-commit-hooks",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^24",
        "typescript": "^5"
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT"
}
